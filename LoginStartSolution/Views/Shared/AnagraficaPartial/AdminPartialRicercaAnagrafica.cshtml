@model LoginStartMenu.Models.Collection.AccessoUtente

<!-- Aggiungi questi riferimenti CSS e JS mancanti -->


<style>
    .carousel-indicators-custom {
        position: static;
        margin: 15px 0;
        justify-content: center;
        display: flex;
    }

        .carousel-indicators-custom button {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin: 0 5px;
            background-color: #ccc;
            border: none;
        }

            .carousel-indicators-custom button.active {
                background-color: #47718D;
            }

    .form-group {
        margin-bottom: 15px;
    }

    .carousel-item {
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 1px 5px rgba(0,0,0,0.05);
    }

    .btn-primary {
        background-color: #669EBA;
        border-color: #669EBA;
    }

        .btn-primary:hover {
            background-color: #3a5f75;
            border-color: #3a5f75;
        }

    .radar-chart-container {
        height: 300px;
        margin-top: 20px;
    }

    .placeholder-content {
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 1px 5px rgba(0,0,0,0.05);
        height: 100%;
    }

   
</style>

<div class="container">
    <div class="profile mb-3">
        <div class="name">@Model.utente.Nome @Model.utente.Cognome</div>
        <div class="social-icons">
            <i class="fab fa-facebook-f"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-linkedin-in"></i>
            <i class="fab fa-github"></i>
        </div>
    </div>

    <div class="image" style="margin-bottom:60px; display:flex; align-items:center; gap:40px;">
        <!-- Nome e Cognome -->
        <div class="passions-conflict-regular">
            @Model.utente.Nome @Model.utente.Cognome
        </div>

        <!-- image-box -->
        <div class="image-box col-sm-2" style="order:-1;">
            @if (Model.immagine != null && Model.immagine.ImmagineProfilo != null)
            {
                string imageBase64 = Convert.ToBase64String(Model.immagine.ImmagineProfilo);
                string imageSrc = $"data:image/jpeg;base64,{imageBase64}";

                <img src="@imageSrc" alt="Foto profilo" style="max-width: 150px; height: auto; border-radius: 10%;
                box-shadow: 7px 8px 6px -5px #000000;">
            }
            else
            {
                <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center"
                     style="width: 150px; height: 150px;">
                    <i class="fas fa-user text-white fa-3x"></i>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <!-- Menu laterale -->
        <div class="parteSinistra col-sm-3" style="text-align:center;">
            <ul class="menu">
                <li><a href="#"><i class="fas fa-lock"></i> Password</a></li>
                <li><a href="#"><i class="fas fa-bell"></i> Notifiche</a></li>
                <li><a href="#"><i class="fas fa-shield-alt"></i> Sicurezza</a></li>
                <li><a href="#"><i class="fas fa-envelope"></i> Email</a></li>
            </ul>
        </div>

        <!-- Contenuto principale -->
        <div class="col-sm-9">
            <div class="row">
                <!-- Colonna sinistra: Carosello form -->
                <div class="col-sm-6">
                    <form action="#" method="post">
                        <div id="formCarousel" class="carousel slide" data-bs-interval="false">
                            <div class="carousel-inner">

                                <!-- STEP 1: Anagrafica -->
                                <div class="carousel-item active">
                                    <h4>Sezione Anagrafica</h4>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="nome">Nome</label>
                                                <input type="text" class="form-control" id="nome" name="nome" placeholder="Inserisci il tuo Nome" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="cognome">Cognome</label>
                                                <input type="text" class="form-control" id="cognome" name="cognome" placeholder="Inserisci il tuo Cognome" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="nazionalita">Nazionalità</label>
                                                <input type="text" class="form-control" id="nazionalita" name="nazionalita" placeholder="Inserisci la tua nazionalità" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="eta">Età</label>
                                                <input type="number" class="form-control" id="eta" name="eta" placeholder="Inserisci la tua età" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- STEP 2: Residenza -->
                                <div class="carousel-item">
                                    <h4>Sezione Residenza</h4>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="viaResidenza">Via di residenza</label>
                                                <input type="text" class="form-control" id="viaResidenza" name="viaResidenza" placeholder="Inserisci la tua via di Residenza" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="indirizzoResidenza">Indirizzo di residenza</label>
                                                <input type="text" class="form-control" id="indirizzoResidenza" name="indirizzoResidenza" placeholder="Inserisci il tuo indirizzo" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="capResidenza">CAP di residenza</label>
                                                <input type="text" class="form-control" id="capResidenza" name="capResidenza" placeholder="Inserisci il CAP di residenza" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- STEP 3: Extra -->
                                <div class="carousel-item">
                                    <h4>Sezione Extra</h4>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="professione">Professione</label>
                                                <input type="text" class="form-control" id="professione" name="professione" placeholder="Inserisci la tua professione">
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="lingue">Lingue parlate</label>
                                                <input type="text" class="form-control" id="lingue" name="lingue" placeholder="Inserisci le lingue">
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="note">Note</label>
                                                <textarea class="form-control" id="note" name="note" placeholder="Annotazioni personali"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Indicatori personalizzati -->
                            <div class="carousel-indicators-custom">
                                <button type="button" data-bs-target="#formCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#formCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#formCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>

                            <!-- Controlli -->
                            <div class="d-flex justify-content-between mt-3">
                                <button class="btn btn-secondary" type="button" data-bs-target="#formCarousel" data-bs-slide="prev">Indietro</button>
                                <button class="btn btn-secondary" type="button" data-bs-target="#formCarousel" data-bs-slide="next">Avanti</button>
                            </div>

                            <!-- Submit finale -->
                            <div class="mt-3 text-end">
                                <button type="submit" class="btn btn-primary">Salva</button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Colonna destra: Grafico a radar -->
                <div class="col-sm-6">
                    <div class="placeholder-content">
                        <h4 class="mb-4">Skills Personali</h4>
                        <div class="radar-chart-container">
                            <canvas id="skillsRadarChart"></canvas>
                        </div>
                        <p class="text-muted mt-3">Analisi delle competenze personali</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->


<script>
    // Inizializzazione del grafico radar
    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('skillsRadarChart');

        if (ctx) {
            // Dati di esempio per il grafico radar
            const skillsData = {
                labels: [
                    'Comunicazione',
                    'Problem Solving',
                    'Teamwork',
                    'Creatività',
                    'Leadership',
                    'Organizzazione'
                ],
                datasets: [{
                    label: 'Competenze',
                    data: [85, 75, 90, 70, 65, 80],
                    fill: true,
                    backgroundColor: 'rgba(71, 113, 141, 0.2)',
                    borderColor: '#669EBA',
                    pointBackgroundColor: '#669EBA',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#669EBA'
                }]
            };

            // Configurazione del grafico
            const config = {
                type: 'radar',
                data: skillsData,
                options: {
                    scales: {
                        r: {
                            angleLines: {
                                display: true
                            },
                            suggestedMin: 0,
                            suggestedMax: 100,
                            ticks: {
                                stepSize: 20
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    responsive: true,
                    maintainAspectRatio: false
                }
            };

            // Creazione del grafico
            new Chart(ctx, config);
        }
    });

    // Aggiorna gli indicatori quando cambia la slide
    document.querySelectorAll('#formCarousel button[data-bs-slide-to]').forEach(button => {
        button.addEventListener('click', function() {
            document.querySelectorAll('.carousel-indicators-custom button').forEach(btn => {
                btn.classList.remove('active');
            });
            this.classList.add('active');
        });
    });

    // Aggiorna indicatori quando si usano i pulsanti next/prev
    const carousel = document.getElementById('formCarousel');
    if (carousel) {
        carousel.addEventListener('slid.bs.carousel', function(event) {
            const activeIndex = event.to;
            document.querySelectorAll('.carousel-indicators-custom button').forEach((btn, index) => {
                btn.classList.toggle('active', index === activeIndex);
            });
        });
    }
</script>