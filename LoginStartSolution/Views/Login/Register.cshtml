@model LoginStartMenu.Models.LoginModels.RegistrationViewModel
@{
    Layout = "_LayoutLogin";
}

<style>
    body {
        position: relative;
        margin: 0;
        padding: 0;
        height: 100vh; /* Assicura che copra l'intera finestra */
        box-sizing: border-box;
    }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('../img/imglogo.jpeg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            opacity: 0.5; /* Opacità solo sullo sfondo */
            z-index: -1; /* Manda lo sfondo dietro il contenuto del body */
        }

    .form-container {
        background-color: white; /* Sfondo bianco */
        border-radius: 10px; /* Bordi arrotondati */
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); /* Ombra */
        padding: 20px; /* Spaziatura interna */
    }
</style>

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-sm-4 form-container">
        <form asp-action="Register" asp-controller="Login" method="post">
            <!-- Email input -->
            <div class="form-outline mb-3">
                <label class="form-label" for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <!-- Username input -->
            <div class="form-outline mb-3">
                <label class="form-label" for="Username">Username</label>
                <input type="text" class="form-control" asp-for="Username" />
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>

            <!-- Password input -->
            <div class="form-outline mb-3">
                <label class="form-label" for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password" />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <!-- Nome input -->
            <div class="form-outline mb-3">
                <label class="form-label" for="Nome">Nome</label>
                <input type="text" class="form-control" asp-for="Nome" />
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>

            <!-- Cognome input -->
            <div class="form-outline mb-3">
                <label class="form-label" for="Cognome">Cognome</label>
                <input type="text" class="form-control" asp-for="Cognome" />
                @Html.ValidationMessageFor(model => model.Cognome, "", new { @class = "text-danger" })
            </div>

            <!-- Codice Fiscale input -->
            <div class="form-outline mb-3">
                <label class="form-label" for="CodiceFiscale">Codice Fiscale</label>
                <input type="text" class="form-control" asp-for="CodiceFiscale" />
                @Html.ValidationMessageFor(model => model.CodiceFiscale, "", new { @class = "text-danger" })
            </div>

            <!-- Submit button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-block">Registrati</button>
            </div>

            <div asp-validation-summary="All" class="text-danger mt-3"></div>
        </form>
        <p>Non vuoi registrarti torna alla pagina iniziale @Html.ActionLink("Pagina Principale", "Index", "Login")</p>

    </div>
</div>

